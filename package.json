{
  "name": "airwave",
  "version": "1.0.2",
  "description": "Share Files with iOS",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder build --win --publish never",
    "publish": "electron-builder build --win --publish always"
  },
  "build": {
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "thura10",
        "repo": "airwave"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "extraResources": [
      {
        "from": "extra/"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thura10/airwave.git"
  },
  "keywords": [
    "airwave",
    "airdrop",
    "windows"
  ],
  "author": "Thura Soe Win",
  "license": "MIT",
  "dependencies": {
    "callback": "0.0.1",
    "electron-updater": "^4.2.0",
    "express": "^4.17.1",
    "multer": "^1.4.2",
    "node-powershell": "^4.0.0",
    "os": "^0.1.1",
    "qrcode": "^1.4.4",
    "electron-log": "^4.0.2"
  },
  "devDependencies": {
    "electron": "7.1.2",
    "electron-builder": "^21.2.0",
    "electron-reload": "^1.5.0"
  }
}
